nav.navbar.navbar-expand-lg.navbar-light.bg-light.border-bottom(aria-label="Offcanvas navbar large")
    .container-fluid
        a.navbar-brand(href="/") Events App
        button.navbar-toggler(type="button", data-bs-toggle="offcanvas", data-bs-target="#offcanvasNavbar2", aria-controls="offcanvasNavbar2", aria-label="Toggle navigation")
            span.navbar-toggler-icon

        #offcanvasNavbar2.offcanvas.offcanvas-end.text-bg-light(tabindex="-1", aria-labelledby="offcanvasNavbar2Label")
            .offcanvas-header
                h5#offcanvasNavbar2Label.offcanvas-title Menu
                button.btn-close.btn-close-white(type="button", data-bs-dismiss="offcanvas", aria-label="Close")

            .offcanvas-body
                ul.navbar-nav.justify-content-end.flex-grow-1.pe-3
                    li.nav-item.dropdown
                        a.nav-link.dropdown-toggle(href="#", role="button", data-bs-toggle="dropdown", aria-expanded="false")
                            span=user.username
                        ul.dropdown-menu
                            li
                                a.dropdown-item(href="/profile/view/") Profile
                            li
                                a.dropdown-item(href="/auth/logout/") Logout
